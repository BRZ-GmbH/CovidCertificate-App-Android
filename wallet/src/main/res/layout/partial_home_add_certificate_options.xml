<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingHorizontal="@dimen/spacing_small">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/bg_add_certificate_option"
		android:orientation="vertical">

		<TextView
			style="@style/CovidCertificate.Text.Bold.Emphasized"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/spacing_large"
			android:layout_marginTop="@dimen/spacing_medium_large"
			android:text="@string/wallet_homescreen_add_title" />

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginTop="@dimen/spacing_medium_large"
			android:background="@color/blueish" />

		<TextView
			style="@style/CovidCertificate.Text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/spacing_large"
			android:layout_marginTop="@dimen/spacing_medium_small"
			android:text="@string/wallet_homescreen_add_certificate_description" />

		<TextView
			android:id="@+id/option_scan_certificate"
			style="@style/CovidCertificate.Text.Bold.Blue"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/spacing_medium_large"
			android:background="?android:selectableItemBackground"
			android:drawablePadding="@dimen/spacing_medium_small"
			android:paddingHorizontal="@dimen/spacing_large"
			android:paddingVertical="@dimen/spacing_medium_large"
			android:text="@string/wallet_homescreen_qr_code_scannen"
			app:drawableStartCompat="@drawable/ic_qrcode_scan"
			app:drawableTint="@color/green_dark" />

		<TextView
			android:id="@+id/option_import_pdf"
			style="@style/CovidCertificate.Text.Bold.Blue"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/spacing_large"
			android:background="?android:selectableItemBackground"
			android:drawablePadding="@dimen/spacing_medium_small"
			android:paddingHorizontal="@dimen/spacing_large"
			android:paddingVertical="@dimen/spacing_medium_large"
			android:text="@string/wallet_homescreen_pdf_import"
			app:drawableStartCompat="@drawable/ic_pdf"
			app:drawableTint="@color/green_dark" />

	</LinearLayout>
</LinearLayout>