<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CovidCertificate.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_medium"
    android:clickable="false"
    android:focusable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/file_permission_dialog_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_small"
            android:background="@drawable/ripple_rounded"
            android:clickable="true"
            android:contentDescription="@string/accessibility_close_button"
            android:focusable="true"
            android:padding="@dimen/spacing_medium_large"
            android:src="@drawable/ic_close"
            android:tint="@color/black" />

        <TextView
            android:id="@+id/file_permission_dialog_text"
            style="@style/CovidCertificate.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:focusedByDefault="true"
            android:gravity="center"
            android:text="@string/wallet_app_file_permission_dialog_text" />

        <TextView
            android:id="@+id/file_permission_dialog_ok_button"
            style="@style/CovidCertificate.Button.Borderless.Black.NoCaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/spacing_small"
            android:text="@string/wallet_app_file_permission_dialog_action" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
